<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@drawable/search_background">
		<EditText android:id="@+id/SearchText" android:layout_weight="1"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
		</EditText>
		<Button android:text="Search" android:id="@+id/SearchButton"
			android:layout_toRightOf="@+id/SearchText" android:layout_height="wrap_content" android:layout_width="wrap_content">
		</Button>
		
	</LinearLayout>
	<TextView 
		android:layout_height="wrap_content"
		android:text="Tags"
		android:textColor="#000000" android:background="@drawable/search_tags_background" android:layout_gravity="center" android:layout_width="fill_parent" android:textStyle="italic"/>
	<ListView android:id="@+id/SearchList" android:layout_height="match_parent"
		android:layout_width="match_parent">
	</ListView>
</LinearLayout>